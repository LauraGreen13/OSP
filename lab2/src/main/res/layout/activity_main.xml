<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
            android:id="@+id/mainText"
            android:text="@string/hello_world"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/goToActivityButton"
            android:layout_centerHorizontal="true"
            android:text="Go to new Activity"
            android:layout_marginTop="50dp"
            android:layout_width="150dp" android:layout_height="60dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_alignTop="@+id/goToActivityButton"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:id="@+id/item_name_edit"
                android:hint="Item name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/item_description_edit"
                android:hint="Description"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"/>

        <EditText
                android:id="@+id/item_price_edit"
                android:hint="Price"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"/>

        <Button
                android:id="@+id/add_item"
                android:hint="Add Item"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="60dp"/>


    </LinearLayout>


</RelativeLayout>
